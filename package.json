{
  "name": "mutent",
  "version": "5.0.0-2",
  "description": "An insanely small utility that helps you to keep business logic and other code separated",
  "main": "mutent.js",
  "types": "types/index.d.ts",
  "files": [
    "mutent.js",
    "types"
  ],
  "keywords": [
    "business-logic",
    "crud",
    "entity",
    "immutable"
  ],
  "scripts": {
    "lint:prettier": "prettier --write src",
    "lint:eslint": "eslint --fix src",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "test:unit": "nyc --reporter=lcov --reporter=text-summary ava",
    "test": "npm run lint && npm run test:unit",
    "build": "rollup -c && prettier --write mutent.js",
    "prepublishOnly": "npm run test && npm run build"
  },
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.12.6",
    "fluente": "^3.0.0",
    "lodash.get": "^4.4.2"
  },
  "devDependencies": {
    "ava": "^3.13.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "esm": "^3.2.25",
    "nyc": "^15.1.0",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/mutent.git"
  },
  "ava": {
    "extensions": [
      "js"
    ],
    "files": [
      "**/*.spec.js"
    ],
    "require": [
      "esm"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
