{
  "name": "mutent",
  "version": "5.0.0-7",
  "description": "Elegant and agnostic solution to work with any persistence layer",
  "main": "mutent.js",
  "types": "types/index.d.ts",
  "files": [
    "mutent.js",
    "types"
  ],
  "keywords": [
    "agnostic",
    "database",
    "entity",
    "immutable",
    "iterable",
    "mutator",
    "mutation",
    "store",
    "stream"
  ],
  "scripts": {
    "lint:prettier": "prettier --write src",
    "lint:eslint": "eslint --fix src",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "test:unit": "nyc --reporter=lcov --reporter=text-summary ava",
    "test": "npm run lint && npm run test:unit",
    "build": "rollup -c && prettier --write mutent.js",
    "prepublishOnly": "npm run test && npm run build"
  },
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.6.2",
    "lodash.get": "^4.4.2"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "esm": "^3.2.25",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/mutent.git"
  },
  "ava": {
    "extensions": [
      "js"
    ],
    "files": [
      "**/*.spec.js"
    ],
    "require": [
      "esm"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
