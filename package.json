{
  "name": "mutent",
  "version": "4.1.2",
  "description": "An insanely small utility that helps you to keep business logic and other code separated",
  "main": "mutent.js",
  "types": "types/index.d.ts",
  "files": [
    "mutent.js",
    "types"
  ],
  "keywords": [
    "business-logic",
    "crud",
    "entity",
    "immutable"
  ],
  "scripts": {
    "lint:prettier": "prettier --write src",
    "lint:eslint": "eslint --fix src",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "test:ts": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.spec.json",
    "test:unit": "nyc --reporter=lcov --reporter=text-summary ava",
    "test": "npm run test:ts && npm run lint && npm run test:unit",
    "build:types": "rimraf types && tsc --declaration --emitDeclarationOnly --declarationDir types",
    "build:js": "rimraf .out && tsc --module es6 && rollup -c && prettier --write mutent.js",
    "build": "npm run build:types && npm run build:js",
    "prepublishOnly": "npm run test && npm run build"
  },
  "author": "Giacomo Gregoletto",
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.12.5",
    "fluente": "^3.0.0",
    "fluido": "^1.0.2",
    "herry": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "ava": "^3.12.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greguz/mutent.git"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.spec.ts"
    ]
  }
}
