{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": ".out",
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/index.ts"
  ]
}
